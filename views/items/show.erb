<body>

<div class = "container-fluid">

    <!-- header -->
    <section class = "row">
        <div class = "col-md-12 clearfix" id = "header">
          <header>
            <a href="/">
              <h1 class = 'text-left'>Animali</h1>
            </a>
          </header>
        </div>
    </section> <!-- end header -->

<!--teeshirt and desc -->
    <section class = "row">
    <div>
      <div class = "col-md-4 col-md-offset-2">
            <img id= "shirt_image" src=<%= item.image_url%>>
      </div>

      <div id= "shirt_info" class = "col-md-4">
        <h3><%=item.name%></h3>
        <p><%=item.description%></p>
        <h4>$<%=item.price%>0</h4>
        <!-- button -->
        <button type="button" class="btn-lg button" data-toggle="modal" data-target="#buy">
            Buy Me!
        </button>
    </div>
    </section>


        <!-- Modal -->
        <div class="modal fade" id="buy">
        <div class="modal-dialog">
          <div class="modal-content" id="buy_modal">
            <div class="modal-header" id = "modal_header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title" id="myModalLabel">Fill In Info To Buy!</h4>
            </div>
            <div class="modal-body">
                <form class= "form-horizontal" action='/transaction' method = 'post'>
                <div class= "form-group">
                    <label>First Name</label>
                    <input class="form-control input-lg" type="text" name = "first_name" placeholder="First Name" required>
                </div>
                <div class= "form-group">
                    <label>Last Name</label>
                    <input class="form-control input-lg" type="text" name = "last_name" placeholder="Last Name" required>
                </div>
                <div class= "form-group">
                    <label>Email</label>
                    <input class="form-control input-lg" type="email" name = "email" placeholder="Email" required>
                </div>
                <div class= "form-group">
                  <label>Quantity</label>
                    <input class="form-control input-lg" type="number" name = "quantity" placeholder="Quantity" required>
                </div>
                    <input type="hidden" name="item_id" value=<%=item.id%> required>
                    <!-- <input id="transactionButton"class = "btn-lg button button_move" type="submit" value="Buy Me!" data-dismiss="modal" data-toggle="modal" data-target="#confirm"> -->
                    <input type="submit" value="Buy Me!">
                </form>
            </div>
          </div>
        </div>
        </div> <!-- end model -->

        <!-- thank you model -->
